<% layout("/layouts/boilerplate") %>

<div class="single-list">
  <h1><%= listing.title %></h1>
  <img src="<%= listing.image %>" alt="<%= listing.title %>" />
  <p><%= listing.description %></p>
  <p>Price: &#x20b9;<%= listing.price.toLocaleString("en-IN") %></p>
  <p>Location: <%= listing.location %></p>
  <p>Country: <%= listing.country %></p>

  <div id="new-btns">
    <a href="/listings/<%= listing._id %>/edit" id="edit-btn" class="btn"
      >Edit</a
    >
    <a href="/listings" id="cancel-btn" class="btn">Back</a>
    <form
      action="/listings/<%= listing._id %>?_method=DELETE"
      method="post"
      class="delete-form"
    >
      <button type="submit" id="delete-btn" class="btn">Delete</button>
    </form>
  </div>
</div>
