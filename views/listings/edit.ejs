<% layout("/layouts/boilerplate") %>

  <div class="row justify-content-center mt-5 m-1">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-sm p-4 mx-2 mb-5">
        <h2 class="text-center mb-4">Edit Listing</h2>

        <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" enctype="multipart/form-data"
          class="needs-validation" novalidate>

          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label fw-semibold">Title</label>
            <input type="text" id="title" name="listing[title]" class="form-control" placeholder="Enter the title"
              value="<%= listing.title %>" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid title.</div>
          </div>

          <!-- Category -->
          <div class="mb-3">
            <label for="category" class="form-label fw-semibold">Category</label>
            <select name="listing[category]" id="category" class="form-select" required>
              <option value="" disabled>Select Category</option>
              <% ["mountains", "cities" , "beaches" , "castles" , "artics" ].forEach(cat=> { %>
                <option value="<%= cat %>" <%=listing.category===cat ? "selected" : "" %>><%=
                    cat.charAt(0).toUpperCase() + cat.slice(1) %>
                </option>
                <% }) %>
            </select>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please select a valid category.</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label fw-semibold">Description</label>
            <textarea id="description" name="listing[description]" class="form-control" rows="3"
              required><%= listing.description.trim() %></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid description.</div>
          </div>

          <!-- Image -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Current Image</label>
            <div class="mb-2">
              <img src="<%= originalImageUrl %>" alt="<%= listing.title %>" class="img-fluid rounded shadow-sm" />
            </div>
            <label for="image" class="form-label fw-semibold mt-2">Upload New Image (optional)</label>
            <input type="file" id="image" name="listing[image]" class="form-control" accept=".jpg, .jpeg, .png" />
            <small class="form-text text-muted">Supported: JPG, JPEG, PNG</small>
          </div>

          <!-- Price & Country -->
          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label fw-semibold">Price</label>
              <input type="number" id="price" name="listing[price]" class="form-control" value="<%= listing.price %>"
                required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a valid price.</div>
            </div>

            <div class="mb-3 col-md-8">
              <label for="country" class="form-label fw-semibold">Country</label>
              <input type="text" id="country" name="listing[country]" class="form-control"
                value="<%= listing.country %>" required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a valid country.</div>
            </div>
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label fw-semibold">Location</label>
            <input type="text" id="location" name="listing[location]" class="form-control"
              value="<%= listing.location %>" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid location.</div>
          </div>

          <!-- Submit and Cancel Buttons -->
          <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn" id="submit-btn">Update</button>
            <a href="/listings/<%= listing._id %>" class="btn btn-secondary">Cancel</a>
          </div>


        </form>
      </div>
    </div>
  </div>