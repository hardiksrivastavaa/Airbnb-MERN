<% layout("/layouts/boilerplate") %>

  <div class="row justify-content-center mt-5 m-1">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-sm p-4 mx-2 mb-5">
        <h2 class="text-center mb-4">Create a New Listing</h2>

        <form action="/listings" method="post" enctype="multipart/form-data" class="needs-validation"
          id="new-listing-form" novalidate>

          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label fw-semibold">Title</label>
            <input type="text" id="title" name="listing[title]" class="form-control" placeholder="Enter the title"
              required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid title.</div>
          </div>

          <!-- Category -->
          <div class="mb-3">
            <label for="category" class="form-label fw-semibold">Category</label>
            <select name="listing[category]" id="category" class="form-select" required>
              <option value="" selected disabled>Select Category</option>
              <option value="mountains">Mountains</option>
              <option value="cities">Cities</option>
              <option value="beaches">Beaches</option>
              <option value="castles">Castles</option>
              <option value="artics">Artics</option>
            </select>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please select a valid category.</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label fw-semibold">Description</label>
            <textarea id="description" name="listing[description]" class="form-control" rows="3"
              placeholder="Enter the description" required></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid description.</div>
          </div>

          <!-- Image Upload -->
          <div class="mb-3">
            <label for="image" class="form-label fw-semibold">Image</label>
            <input type="file" id="image" name="listing[image]" class="form-control" accept=".jpg, .jpeg, .png"
              required />
            <div class="form-text text-muted">Supported formats: JPG, JPEG, PNG</div>
            <div class="valid-feedback">Image looks good!</div>
            <div class="invalid-feedback">Please upload a valid image.</div>
          </div>

          <!-- Price and Country -->
          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label fw-semibold">Price</label>
              <input type="number" min="0" id="price" name="listing[price]" class="form-control"
                placeholder="Enter the price" required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a valid price.</div>
            </div>

            <div class="mb-3 col-md-8">
              <label for="country" class="form-label fw-semibold">Country</label>
              <input type="text" id="country" name="listing[country]" class="form-control" placeholder="India"
                required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a valid country.</div>
            </div>
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label fw-semibold">Location</label>
            <input type="text" id="location" name="listing[location]" class="form-control" placeholder="Raebareli, Uttar Pradesh"
              required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid location.</div>
          </div>

          <!-- Submit and Cancel Buttons -->
          <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn" id="submit-btn">Create</button>
            <a href="/listings" class="btn btn-secondary">Cancel</a>
          </div>

        </form>
      </div>
    </div>
  </div>