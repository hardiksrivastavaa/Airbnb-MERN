<% layout("/layouts/boilerplate") %>

  <div class="row m-1">

    <div class="col-lg-8 col-10 offset-lg-2 offset-1">

      <form action="/listings" method="post" enctype="multipart/form-data" class="mt-3 mb-5 needs-validation"
        id="new-listing-form" novalidate>

        <h1 class="text-center mb-3">New Listing</h1>

        <div class="mb-3">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input type="text" id="title" name="listing[title]" class="form-control" placeholder="Enter the title"
            required />
          <div class="valid-feedback">Title Looks good!</div>
          <div class="invalid-feedback">Valid Title Should be Entered!</div>
        </div>

        <div class="mb-3">
          <label for="category" class="form-label fw-semibold">Category</label>
          <select name="listing[category]" id="category" class="form-select" required>
            <option value="" selected disabled>Select Category</option>
            <option value="mountains">Mountains</option>
            <option value="cities">Cities</option>
            <option value="beaches">Beaches</option>
            <option value="castles">Castles</option>
            <option value="artics">Artics</option>
          </select>
          <div class="valid-feedback">Category looks good!</div>
          <div class="invalid-feedback">Please select a valid category!</div>
        </div>
        
        <div class="mb-3">
          <label for="description" class="form-label fw-semibold">Description</label>
          <textarea id="description" name="listing[description]" class="form-control"
            placeholder="Enter the description" required></textarea>
          <div class="valid-feedback">Description Looks good!</div>
          <div class="invalid-feedback">Valid Description Should be Entered!</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label fw-semibold">Image</label>
          <input type="file" id="image" name="listing[image]" class="form-control" accept=".jpg, .jpeg, .png" required />
          <small class="form-text text-danger">Supported formats: JPG, JPEG, PNG</small>
          <div class="valid-feedback">Great! Your image has been uploaded successfully.</div>
          <div class="invalid-feedback">Please upload a valid image file.</div>
        </div>
        
        <div class="row">

          <div class="mb-3 col-md-4">
            <label for="price" class="form-label fw-semibold">Price</label>
            <input id="price" name="listing[price]" class="form-control" placeholder="Enter the price" required />
            <div class="valid-feedback">Price Looks good!</div>
            <div class="invalid-feedback">Valid Price Should be Entered!</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input type="text" id="country" name="listing[country]" class="form-control"
              placeholder="Enter the country eg. India" required />
            <div class="valid-feedback">Country Looks good!</div>
            <div class="invalid-feedback">Valid Country Should be Entered!</div>
          </div>

        </div>

        <div class="mb-3">
          <label for="location" class="form-label fw-semibold">Location</label>
          <input type="text" id="location" name="listing[location]" class="form-control"
            placeholder="Enter the location eg. Raebareli" required />
          <div class="valid-feedback">Location Looks good!</div>
          <div class="invalid-feedback">Valid Location Should be Entered!</div>
        </div>


        <div class="d-flex justify-content-center gap-2">
          <button type="submit" id="submit-btn" class="btn">Create</button>
          <a href="/listings" id="cancel-btn" class="btn">Cancel</a>
        </div>

      </form>
    </div>

  </div>