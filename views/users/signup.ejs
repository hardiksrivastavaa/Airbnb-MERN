<% layout("/layouts/boilerplate") %>

  <div class="row m-1">

    <div class="col-8 offset-2">

      <form action="/signup" method="post" class="mt-3 mb-5 needs-validation" id="new-listing-form" novalidate>

        <h1 class="text-center mb-3">Register Here</h1>

        <!-- Enter the username -->

        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" id="username" name="username" class="form-control" placeholder="Enter the username"
            required />
          <div class="valid-feedback">Username Looks good!</div>
          <div class="invalid-feedback">Valid Username Should be Entered!</div>
        </div>

        <!-- Enter the email -->
         
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter the email"
            required />
          <div class="valid-feedback">email Looks good!</div>
          <div class="invalid-feedback">Valid email Should be Entered!</div>
        </div>

        <!-- Enter the password -->
         
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter the password"
            required />
          <div class="valid-feedback">password Looks good!</div>
          <div class="invalid-feedback">Valid password Should be Entered!</div>
        </div>

        <div class="d-flex justify-content-center gap-2">
          <button type="submit" id="submit-btn" class="btn">Register</button>
          <a href="/" id="cancel-btn" class="btn">Cancel</a>
        </div>

      </form>
    </div>

  </div>